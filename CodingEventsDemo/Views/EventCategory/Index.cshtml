@model List<CodingEventsDemo.Models.EventCategory>

<h1>Event Categories</h1>

@if (Model.Count == 0)
{
      <p>No event categories yet!</p>
}
else 
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
        </tr>
        @foreach (var eventCategory in Model)
                {
                    <tr>
                        <td>@eventCategory.Name</td>
                    </tr>
                }
    </table>
}